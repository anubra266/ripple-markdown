
import { codeToHtml } from 'shiki'
import { cn } from '../lib/utils'

export component Code({
    code,
    language,
    class:className,
    ...props
}) {

	const divRef = async (node) => {
		const html = await codeToHtml(code, {
			theme: 'vitesse-dark',
			lang: language,
		});

		node.innerHTML = html;
	};
    
    <div {ref divRef} class={cn("[&>pre]:!bg-transparent text-sm", className)} {...props} />
}